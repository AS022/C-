@model SampleMVCApp.Models.EmpTable[]
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllEmployess</title>
    <style>
        h1 {
            background-color:aqua;
        }
    </style>
   
</head>
<body>
    <h1>List of Employess with Us!!!!</h1>
    <hr/>
    <div> 
        <table border="1" width="100%">
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
                <th>Employee Address</th>
                <th>Employee Salary</th>
                <th>Options</th>
            </tr>
            @foreach (var emp in Model)
            {
        <tr>

            <td>@emp.EmployeeID</td>
            <td>@emp.EmployeeName</td>
            <td>@emp.EmployeeAddress</td>
            <td>@emp.EmployeeSalary</td>
            <td>@Html.ActionLink("Edit", "Find", new { id = " emp.EmpID" })</td>
        </tr>
            }
                   
        </table>
    </div>
</body>
</html>
